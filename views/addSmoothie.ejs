<%-include('partials/header') -%>

<form method="POST" action="/smoothies/add">
  <h2>Add recipe</h2>
  <label for="title">Title: </label>
  <input type="text" name="title" required/>
  <div class="title error"></div>
  <div class="ingredients">
    <label for="ingr">Enter ingerdient name:</label>
    <input type="text" name="ingr" id="ingr" />
    <button class="btn_add">Add</button>
    <div class="ingr_added"></div>
  </div>
  <div class="ingredient error"></div>
  <button type="submit" class="btn_submit">Create smoothie</button>
</form>

<script src="/recipe.js"></script>

